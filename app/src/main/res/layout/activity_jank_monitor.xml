<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="chenyu.memorydemo.JankMonitorActivity">

  <Button
      android:text="Start" android:textAllCaps="false"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/button_start_monitor" tools:layout_constraintTop_creator="1"
      android:layout_marginStart="16dp" android:layout_marginTop="31dp"
      tools:layout_constraintLeft_creator="1" app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>
  <Button
      android:text="Stop" android:textAllCaps="false"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/button_stop_monitor" tools:layout_constraintTop_creator="1"
      tools:layout_constraintRight_creator="1" app:layout_constraintRight_toRightOf="parent"
      android:layout_marginTop="32dp" tools:layout_constraintLeft_creator="1"
      app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"/>
  <Button
      android:text="Delay" android:textAllCaps="false"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/button_delay" tools:layout_constraintTop_creator="1"
      android:layout_marginStart="16dp" android:layout_marginTop="23dp"
      app:layout_constraintTop_toBottomOf="@+id/button_start_monitor"
      tools:layout_constraintLeft_creator="1" app:layout_constraintLeft_toLeftOf="parent"/>
</android.support.constraint.ConstraintLayout>
